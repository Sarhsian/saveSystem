@model IQueryable<saveSystem.Domain.Subject>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div>
        <a asp-controller="Home" asp-action="SubjectAdd" class="btn-dark rounded">Додати файл</a>
    </div>

    <br />

    <div class="row">
        <table class="table table-bordered table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Назва предмету</th>
                    <th scope="col">Курс</th>
                    <th scope="col">Назва файлу</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row"></th>
                        <th>
                            @item.SubjectName
                        </th>
                        <th>
                            @item.Course
                        </th>
                        <th>
                            <form method="post" asp-controller="Home" asp-action="OpenPDF">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <input type="submit" value="@item.SubjectFileName" class="btn-primary"/> 
                            </form>
                        </th>
                        <th>
                            <form method="post" asp-controller="Home" asp-action="SubjectDelete">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <input type="submit" value="Х" class="btn-danger" />
                            </form>

                        </th>
                    </tr>

                }
            </tbody>
        </table>
    </div>

</div>